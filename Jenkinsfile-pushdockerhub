pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    
                    git 'https://github.com/iqramalik85/nginx-docker.git'
                    
                    sh 'docker build -t malikayra/final:latest .'

                    sh 'docker login -u malikayra -p dckr_pat_zW1rQpFHx1_WffRYRQLm--qNOwQ'
                    sh 'docker push malikayra/final:latest'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh 'docker pull malikayra/final:latest'
                    sh 'docker run -p 8081:8081 --name final-container -d malikayra/final:latest'
                }
            }
        }
    }
}
